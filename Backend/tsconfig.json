{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["node"],
    "outDir": "./dist"
  },
  "include": ["index.ts", "src/**/*", "src/types/index.d.ts"],
  "exclude": ["node_modules"]
}